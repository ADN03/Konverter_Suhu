<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edxt_celcius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="masukkan suhu Celcius"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="47dp" />

    <Button
        android:id="@+id/btn_konvert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="272dp"
        android:background="@drawable/capsule_button"
        android:onClick="konversisuhu"
        android:text="Convert"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="112dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="106dp"
        android:text="Kelvin"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edxt_kelvin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:hint="hasil dalam Kelvin"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edxt_farenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:hint="hasil dalam Farenheit"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edxt_reamur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="49dp"
        android:ems="10"
        android:hint="hasil dalam Reamur"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edxt_farenheit"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="6dp"
        android:text="Farenheit"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="366dp"
        android:text="Reamur"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="216dp"
        android:background="@drawable/capsule_button"
        android:onClick="keluar"
        android:text="Exit"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edxt_celcius"
        android:layout_alignParentStart="true"
        android:layout_marginStart="181dp"
        android:layout_marginTop="-23dp"
        android:text="Celcius"
        android:textColor="#000000"
        android:textSize="18sp" />

</RelativeLayout>